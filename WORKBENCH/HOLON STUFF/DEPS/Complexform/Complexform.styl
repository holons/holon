// MIXINS - CUSTOM
inputfield()
  display               block
  background-color      #ffffff
  padding               5px
  margin                0 0 0.5em 11em
  border                1px solid #ccc
  overflow hidden
titlefield()
  float                 left
  witdth                10em
  margin                0.5em 0 0 0
section()
  display               block
  font-size             1.2em
  font-weight           bold
  padding 0 0 0.5em 0
dataset()
  margin               1em 0em 1em 3em
  clear both
  padding 2em 0


// COMPONENT DEFINITION
Component_Complexform(
  maxWidth        = 100%,
  baseFontSize    = 10px,
  backgroundColor = #ffffff,
  borderColor     = #666666,
  shadowColor     = #666666,
  backgroundImage = url('')
)
  .Complexform
    // position            relative
    position            absolute
    top                 3em
    left                3em
    width               1100px
    background          backgroundImage ts_clr_page_background
    border-radius       5px
    border              1px solid #000
    box-shadow          0 0 5em shadowColor;
  .Complexform--CONTEXT\\=none { }
  .Complexform--STATE\\=normal { }
  .Complexform--STATE\\=hidden
    display             none
  .Complexform--VARIANT\\=default
   font-size           baseFontSize
  .Complexform__menu__cancel
    float               right
  .Complexform__menu
